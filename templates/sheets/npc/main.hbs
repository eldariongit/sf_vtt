<div class="sheet sheet-border white-background scroller">
    <div class="sheet-character-details1">
        <div class="sheet-cell white-background black-color dataGroup">
            <b>{{localize 'sf.details.name'}}:</b>
        </div>
        <div class="sheet-cell white-background black-color dataGroup">
            <input type="text" name="name" value="{{actor.name}}" class="input-char-short inputdata">
        </div>
        <div class="sheet-cell white-background black-color dataGroup">
            <b>{{localize 'sf.details.style'}}:</b>
        </div>
        <div class="sheet-cell white-background black-color dataGroup">
            <input type="text" name="system.details.style" value="{{system.details.style}}" class="input-char-short inputdata">
        </div>
    </div>

    <div class="sheet-separator"></div>
    
	<div class="sheet-character-attributeHeadings">
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.attributes.physical'}}</div>
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.attributes.social'}}</div>
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.attributes.mental'}}</div>
	</div>

    <div class="sheet-character-attributes">
        {{#each system.attributes as |attribute key|}}
            <div class="sheet-cell white-background black-color dataGroup"
                    data-name="system.attributes.{{key}}.label" data-value="{{attribute.label}}">
                <b>{{localize attribute.label}}</b>
            </div>
            <div class="sheet-cell white-background black-color dataGroup"
                    data-name="system.attributes.{{key}}.value" data-value="{{attribute.value}}">
                <input type="number" name="system.attributes.{{key}}.value" value="{{attribute.value}}" class="input-number inputdata">
            </div>
		{{/each}}
    </div>

    <div class="sheet-separator"></div>

    <div class="sheet-character-singleHeading">
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.techniquesAbilities'}}</div>
	</div>

    <div class="sheet-character-abilities">
        <div class="sheet-character-abilitiesColumn">
            <div class="sheet-character-ability">
                <div class="sheet-cell white-background black-color dataGroup"><b>{{localize system.techniques.punch.label}}</b></div>
                <div class="sheet-cell white-background black-color dataGroup">
                    <input type="number" name="system.techniques.punch.value" value="{{system.techniques.punch.value}}" class="input-number">
                </div>
            </div>
            <div class="sheet-character-ability">
                <div class="sheet-cell white-background black-color dataGroup"><b>{{localize system.techniques.kick.label}}</b></div>
                <div class="sheet-cell white-background black-color dataGroup">
                    <input type="number" name="system.techniques.kick.value" value="{{system.techniques.kick.value}}" class="input-number">
                </div>
            </div>
        </div>
        <div class="sheet-character-abilitiesColumn">
            <div class="sheet-character-ability">
                <div class="sheet-cell white-background black-color dataGroup"><b>{{localize system.techniques.block.label}}</b></div>
                <div class="sheet-cell white-background black-color dataGroup">
                    <input type="number" name="system.techniques.block.value" value="{{system.techniques.block.value}}" class="input-number">
                </div>
            </div>
            <div class="sheet-character-ability">
                <div class="sheet-cell white-background black-color dataGroup"><b>{{localize system.techniques.grab.label}}</b></div>
                <div class="sheet-cell white-background black-color dataGroup">
                    <input type="number" name="system.techniques.grab.value" value="{{system.techniques.grab.value}}" class="input-number">
                </div>
            </div>
        </div>
        <div class="sheet-character-abilitiesColumn">
            <div class="sheet-character-ability">
                <div class="sheet-cell white-background black-color dataGroup"><b>{{localize system.techniques.athletics.label}}</b></div>
                <div class="sheet-cell white-background black-color dataGroup">
                    <input type="number" name="system.techniques.athletics.value" value="{{system.techniques.athletics.value}}" class="input-number">
                </div>
            </div>
            <div class="sheet-character-ability">
                <div class="sheet-cell white-background black-color dataGroup"><b>{{localize system.techniques.focus.label}}</b></div>
                <div class="sheet-cell white-background black-color dataGroup">
                    <input type="number" name="system.techniques.focus.value" value="{{system.techniques.focus.value}}" class="input-number">
                </div>
            </div>
        </div>
    </div>

    <div class="sheet-npc-abilities">
        {{#each system.abilities as |ability key|}}
            <div class="sheet-cell white-background black-color dataGroup"
                    data-name="system.abilities.{{key}}.name" data-value="{{ability.name}}">
                <div class="input-wrapper {{#if (eq ability.name '') }}show-underline{{/if}}">
                    <input type="text" name="system.abilities.{{key}}.name" value="{{ability.name}}" class="input-line emptyBox inputdata">
                </div>
            </div>
            <div class="sheet-cell white-background black-color dataGroup"
                    data-name="system.abilities.{{key}}.value" data-value="{{ability.value}}">
                <input type="number" name="system.abilities.{{key}}.value" value="{{ability.value}}" class="input-number emptyBox inputdata">
            </div>
        {{/each}}
    </div>

    <div class="sheet-separator"></div>

	<div class="sheet-character-attributeHeadings">
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.resources.health'}}</div>
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.resources.willpower'}}</div>
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.resources.chi'}}</div>
	</div>

    <div class="sheet-character-abilities">
        {{#each system.resources as |resource key|}}
            <div class="sheet-character-abilitiesColumn">
                <div class="sheet-cell-center black-color dataGroup">
                    <span data-name="system.resources.{{key}}.current" data-value="{{resource.current}}">
                        <input type="number" name="system.resources.{{key}}.current" value="{{resource.current}}" class="input-number inputdata">
                    </span>
                    /
                    <span data-name="system.resources.{{key}}.total" data-value="{{resource.total}}">
                        <input type="number" name="system.resources.{{key}}.total" value="{{resource.total}}" class="input-number inputdata">
                    </span>
                </div>
            </div>
		{{/each}}
    </div>

    <div class="sheet-separator"></div>

    <div class="sheet-character-singleHeading">
        <div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.basicManeuvers.basicManeuvers'}}</div>
    </div>

    <div class="sheet-character-abilitiesColumn">
        {{#if (gt system.techniques.punch.value 0)}}
            <div class="sheet-character-attributeHeadings">
                <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.jabPunch'}}</div>
                <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value 2}} /
                        {{add system.attributes.strength.value system.techniques.punch.value -1}} /
                        {{add system.techniques.athletics.value 0}}</div>
                <div class="pullRight sheet-cell black-color dataGroup"></div>
            </div>
            <div class="sheet-character-attributeHeadings">
                <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.strongPunch'}}</div>
                <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value 0}} /
                        {{add system.attributes.strength.value system.techniques.punch.value 1}} /
                        {{add system.techniques.athletics.value 0}}</div>
                <div class="pullRight sheet-cell black-color dataGroup"></div>
            </div>
            <div class="sheet-character-attributeHeadings">
                <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.fiercePunch'}}</div>
                <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value -1}} /
                        {{add system.attributes.strength.value system.techniques.punch.value 3}} /
                        {{add system.techniques.athletics.value -1}}</div>
                <div class="pullRight sheet-cell black-color dataGroup"></div>
            </div>
        {{/if}}
        {{#if (gt system.techniques.kick.value 0)}}
            <div class="sheet-character-attributeHeadings">
                <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.shortKick'}}</div>
                <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value 1}} /
                        {{add system.attributes.strength.value system.techniques.kick.value 0}} /
                        {{add system.techniques.athletics.value 0}}</div>
                <div class="pullRight sheet-cell black-color dataGroup"></div>
            </div>
            <div class="sheet-character-attributeHeadings">
                <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.forwardKick'}}</div>
                <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value 0}} /
                        {{add system.attributes.strength.value system.techniques.kick.value 2}} /
                        {{add system.techniques.athletics.value -1}}</div>
                <div class="pullRight sheet-cell black-color dataGroup"></div>
            </div>
            <div class="sheet-character-attributeHeadings">
                <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.roundhouseKick'}}</div>
                <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value -2}} /
                        {{add system.attributes.strength.value system.techniques.kick.value 4}} /
                        {{add system.techniques.athletics.value -1}}</div>
                <div class="pullRight sheet-cell black-color dataGroup"></div>
            </div>
        {{/if}}
        {{#if (gt system.techniques.grab.value 0)}}
            <div class="sheet-character-attributeHeadings">
                <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.grab'}}</div>
                <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value 0}} /
                        {{add system.attributes.strength.value system.techniques.grab.value 0}} /
                        {{add system.techniques.athletics.value 0}}</div>
                <div class="pullRight sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.ignoresBlocks'}}</div>
            </div>
        {{/if}}
        {{#if (gt system.techniques.block.value 0)}}
            <div class="sheet-character-attributeHeadings">
                <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.block'}}</div>
                <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value 4}} / 0 / 0</div>
                <div class="pullRight sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.soak'}}: {{add system.attributes.stamina.value system.techniques.block.value}}</div>
            </div>
        {{/if}}
        <div class="sheet-character-attributeHeadings">
            <div class="pullLeft sheet-cell black-color dataGroup">{{localize 'sf.basicManeuvers.movement'}}</div>
            <div class="pullLeft centerText black-color dataGroup">{{add system.attributes.dexterity.value 3}} / 0 / {{add system.techniques.athletics.value 3}}</div>
            <div class="pullRight sheet-cell black-color dataGroup"></div>
        </div>
    </div>

    <div class="sheet-separator"></div>

    <div class="sheet-character-singleHeading">
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.maneuvers'}}</div>
	</div>

    <div class="sheet-character-abilitiesColumn">
        {{#each system.maneuvers as |maneuver key|}}
            <div class="sheet-cell black-color dataGroup">
                <span data-name="system.maneuvers.{{key}}.name" data-value="{{maneuver.name}}">
                    <div class="input-wrapper {{#if (eq maneuver.name '') }}show-underline{{/if}}">
                        <input type="text" name="system.maneuvers.{{key}}.name" value="{{maneuver.name}}" class="input-char-short inputdata">
                    </div>
                </span>

                <span data-name="system.maneuvers.{{key}}.speed" data-value="{{maneuver.speed}}">
                    <div class="input-wrapper {{#if (eq maneuver.speed '') }}show-underline{{/if}}">
                        <input type="text" name="system.maneuvers.{{key}}.speed" value="{{maneuver.speed}}" class="input-number-short inputdata">
                    </div>
                </span>
                /
                <span data-name="system.maneuvers.{{key}}.damage" data-value="{{maneuver.damage}}">
                    <div class="input-wrapper {{#if (eq maneuver.damage '') }}show-underline{{/if}}">
                        <input type="text" name="system.maneuvers.{{key}}.damage" value="{{maneuver.damage}}" class="input-number-long inputdata">
                    </div>
                </span>
                /
                <span data-name="system.maneuvers.{{key}}.move" data-value="{{maneuver.move}}">
                    <div class="input-wrapper {{#if (eq maneuver.move '') }}show-underline{{/if}}">
                        <input type="text" name="system.maneuvers.{{key}}.move" value="{{maneuver.move}}" class="input-number-short inputdata">
                    </div>
                </span>

                <span data-name="system.maneuvers.{{key}}.special" data-value="{{maneuver.special}}">
                    <div class="input-wrapper {{#if (eq maneuver.special '') }}show-underline{{/if}}">
                        <input type="text" name="system.maneuvers.{{key}}.special" value="{{maneuver.special}}" class="input-char-short inputdata">
                    </div>
                </span>
            </div>
        {{/each}}
    </div>

    <div class="sheet-separator"></div>

    <div class="sheet-character-singleHeading">
		<div class="pullLeft headlineGroup centerText black-color">{{localize 'sf.combos'}}</div>
	</div>

    <div class="sheet-character-abilitiesColumn">
        {{#each system.combos as |combo key|}}
            <div class="sheet-cell black-color dataGroup">
                <div data-name="system.combos.{{key}}" data-value="{{combo}}">
                    <div class="input-wrapper {{#if (eq combo '') }}show-underline{{/if}}">
                        <input type="text" name="system.combos.{{key}}" value="{{combo}}" class="input-char-long inputdata">
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="sheet-separator"></div>

    <div>
        <img class="charImg" src="{{actor.img}}" data-edit="img" data-action="editImage" title="{{actor.name}}">
    </div>
</div>